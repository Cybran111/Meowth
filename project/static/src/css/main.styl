@import "bootstrap/dist/css/bootstrap.min.css"
@import "magnific-popup/dist/magnific-popup.css"
@import "bootstrap-select/dist/css/bootstrap-select.min.css"
@import "base.styl"
@import "error.styl"
@import "feed.styl"
@import "form.styl"

.gallery-lightbox-image
  display none

.gallery-lightbox-focused
  display block

.gallery-image
  cursor pointer

.promo-banner
  width 300px
  margin 0 auto 60px

.promo-banner-text
  width: 250px
  color rgb(35, 31, 32)
  margin-left 15px
  padding-top 5px

.promo-banner-text h1
  font-family Arial BoldMT
  font-size 25px
  font-weight bold
  line-height 36px

.promo-banner-text p
  font-family ArialMT
  font-size 20px
  line-height 30px

@media (min-width 480px)
  .promo-banner-text h1
    font-size 30px
    line-height 1
  .promo-banner-text
    width 300px

@media (min-width 768px)
  .promo-banner-text
    margin-left 55px
    width 400px
  .promo-banner-text h1
    font-size 40px
  .promo-banner
    margin-bottom 80px

@media (min-width 1024px)
  .promo-banner-text
    margin-left 600px
    padding-top 110px
  .promo-banner
    margin-bottom 90px
    height 360px
    background url('/static/img/promo-banner.png') no-repeat -80px 50%
