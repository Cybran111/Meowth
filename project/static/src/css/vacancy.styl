.vacancy h1
  font-size 33px
  margin: 10px 0 3px

.vacancy-city
  margin 0

.vacancy-salary
  color $color-main
  font-size 31px
  margin 15px 0

.vacancy h3
  font-size 20px

.vacancy-text
  margin-bottom 60px
  line-height 25px

.apply-form label
  display block
  margin 35px 0 12px
  
.apply-form textarea
  margin-bottom 15px
  resize none
  height 110px

.apply-form input[type='text'], .apply-form input[type='email'], .apply-form textarea
  width calc(100% - 2px - 2 * 15px)
  padding 14px 15px 11px
  border-radius 4px
  border 1px solid $color-separator-last
  font-size 16px
  -box-shadow inset 0 3px $color-nav-shadow
  &:focus
    border-color $color-main
    outline 1px solid $color-main

.apply-form div.has-error
  input[type='text']
  input[type='email']
    border-color $color-error
    border-width 2p

.apply-form input[type='submit']
  width 100%

.form-file
  height 35px
  padding-top 15px
  overflow hidden
  position relative
  cursor pointer
  margin-bottom 40px

.input-hidden
  cursor pointer
  height 100%
  position absolute
  top 0
  right 0
  font-size 50px
  opacity 0
  -moz-opacity 0